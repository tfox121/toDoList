  "version": "0.2.0",
  "configurations": [
    {
      "name": "Nodemon Launch Server",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "runtimeExecutable": "nodemon",
      "runtimeArgs": [
          "--debug=5858"
      ],
      "program": "${workspaceRoot}/server.js",
      "restart": true,
      "port": 5858,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
     }
  ]
}